# Production Environment Configuration
# Enhanced Blockchain Voting System

# Application
NODE_ENV=production
PORT=3000
API_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://voting_user:secure_password@postgres:5432/voting_system
POSTGRES_DB=voting_system
POSTGRES_USER=voting_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Blockchain Configuration
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
PRIVATE_KEY=YOUR_PRIVATE_KEY
CONTRACT_ADDRESS=YOUR_CONTRACT_ADDRESS

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key-change-in-production

# File Storage
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=voting-system-uploads
CDN_URL=https://cdn.yourdomain.com

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@yourdomain.com

# Monitoring
GRAFANA_PASSWORD=secure-grafana-password
PROMETHEUS_RETENTION=30d

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
UPLOAD_RATE_LIMIT=5

# Feature Flags
ENABLE_CANDIDATE_PHOTOS=true
ENABLE_MANIFESTOS=true
ENABLE_LIVE_TALLY=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_VOTE_CONFIRMATION=true
ENABLE_ACCESSIBILITY_FEATURES=true

# Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555

# Performance
MAX_UPLOAD_SIZE=10485760
IMAGE_COMPRESSION_QUALITY=85
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true

# SSL/TLS (when using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=voting-system-backups
