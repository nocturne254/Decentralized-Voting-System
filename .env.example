# Environment Configuration for Multi-Tenant Voting System
# Copy this file to .env and configure for your organization

# Institution Configuration
VITE_INSTITUTION_NAME="Your Organization Name"
VITE_INSTITUTION_SHORT_NAME="ORG"
VITE_INSTITUTION_DOMAIN="yourorg.com"
VITE_INSTITUTION_EMAIL="elections@yourorg.com"
VITE_INSTITUTION_WEBSITE="https://yourorg.com"

# Branding & Theme
VITE_PRIMARY_COLOR="#1e40af"
VITE_SECONDARY_COLOR="#3b82f6"
VITE_ACCENT_COLOR="#f59e0b"
VITE_LOGO_URL="/assets/logos/org-logo.png"

# Features
VITE_ALLOW_PUBLIC_VOTING=false
VITE_REQUIRE_EMAIL_VERIFICATION=true
VITE_ENABLE_REALTIME_RESULTS=true
VITE_ALLOW_ANONYMOUS_VOTING=false
VITE_MAX_CANDIDATES_PER_ELECTION=10
VITE_MAX_ELECTIONS_PER_ORG=50

# API Configuration
PORT=3000
NODE_ENV=production
API_BASE_URL=http://localhost:8888
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourorg.com

# Database (for API keys and organization management)
DATABASE_URL=postgresql://username:password@localhost:5432/voting_system
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
ETHEREUM_NETWORK=mainnet
INFURA_PROJECT_ID=your_infura_project_id
PRIVATE_KEY=your_private_key_for_contract_deployment

# Security
JWT_SECRET=your_jwt_secret_key_here
API_KEY_SALT=your_api_key_salt_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service (for notifications)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=noreply@yourorg.com
SMTP_PASS=your_email_password

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# File Storage (for logos, images)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-voting-assets-bucket
AWS_REGION=us-east-1
